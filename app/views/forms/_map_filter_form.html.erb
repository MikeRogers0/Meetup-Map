<%= bootstrap_form_for MapFilterForm.build, url: "#" do |f| %> 
  <%= f.hidden_field :latitude, step: "0.0001", max: "90", min: "-90", class: "session-store"  %>
  <%= f.hidden_field :longitude, step: "0.0001", max: "180", min: "-180", class: "session-store" %>
  <%= link_to "🌐 Locate Me", "#", class: "locate-me btn btn-default" %>
  <hr />
  <%= f.datetime_field :start_datetime %>
  <%= f.datetime_field :end_datetime %>
  <hr />
  <%= f.text_field :keywords, class: "session-store" %>
  <%= f.text_field :minus_keywords, class: "session-store" %>
  <%= f.number_field :radius, min: 1, max: 100, help: "In Miles", class: "session-store" %>
  <%= f.number_field :min_attendees, class: "session-store" %>
  <%= f.submit %>
<% end %>
